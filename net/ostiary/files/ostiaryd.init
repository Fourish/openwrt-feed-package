#!/bin/sh /etc/rc.common

START=99
STOP=85

USE_PROCD=1

start_service()
{

	procd_open_instance
	procd_set_param respawn
	procd_set_param command /usr/bin/ostiaryd -c /etc/ostiary.cfg 
	procd_close_instance
}

stop_service()
{
	killall ostiaryd
}

reload_service()
{
restart
}

service_triggers()
{
	procd_add_reload_trigger ostiaryd
}
