config server 'A'
	option socktype "tcp"
	option debug "debug-A.tcp"
	option port 6720
	option server "knxd_tcp"
	option systemd_ignore 0

config server 'B'
	option socktype "unix"
	option path "/var/run/knxd"
	option server "knxd_unix"
	option systemd_ignore 0

config driver 'C'
	option socktype "ip"
	option debug "debug-C.ip"
	option driver "ip"
	option multicast_address "224.0.23.12"

config debug 'debug_A'
	option socktype "tcp"
	option error_level "0x7"
	
config debug 'debug_C'
	option socktype "ip"
	option trace_mask "0x7"

config main 'router'
	option addr "0.0.100"
	option background 1
	option client_addrs "2.2.20:10"
	option connections "A.tcp,B.unix,C.ip"
	option logfile "/var/log/knxd.log"
	option name "OpenWrt"
