#!/bin/sh /etc/rc.common

START=50
USE_PROCD=1

restart() {
	stop_service
	start_service
}

start_service() {
	mkdir -p /var/run/nut
	chown root:root /var/run/nut
	chmod 0700 /var/run/nut

	upsdrvctl start
	upsd
}

stop_service() {
	upsd -c stop
	upsdrvctl stop
}

reload_service() {
	upsd -c reload
}
